%legend
  = t(".legend")

= simple_form_for @photo do |f|
  = render :partial => 'fields', :locals => { :f => f }
  = f.input :image, :hint => t(".file_hint")

  %div{ :class => "form-actions"}
    = f.button :submit, t(".create"), :class => "btn btn-large btn-success"
    = link_to t(".cancel"), photos_path, :class => "btn btn-large"
