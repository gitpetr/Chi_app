        li = link_to t(".login_link"), new_user_session_path
        li|

      li = link_to t(".articles_link"), articles_path, :id => "footer-article"
      li = link_to t(".albums_link"),   albums_path,   :id => "footer-albums"
      li = link_to t(".sermons_link"),  sermons_path,  :id => "footer-sermons"
      li = link_to t(".contacts_link"), contacts_path, :id => "footer-contacts"
