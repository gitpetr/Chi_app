%h2
  = link_to article.title, article_path( :id => article )
  = link_to edit_article_path(article), :class => "btn btn-small article-edit-button" do
    %i{:class=>"icon-pencil icon-white"}
    =t(".edit_article")

%p
  != truncate(article.content, :length => 1200, :separator => ' ')
= link_to t(".read_article"), article_path( :id => article ), :class => "btn"
%hr