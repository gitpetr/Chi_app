%legend
  Edit Contact

= simple_form_for @contact do |f|
  = f.input :chirch_name, :input_html => { :class => "span9" }
  = f.input :phone, :input_html => { :class => "span9" }
  = f.input :address, :input_html => { :rows => "4", :class => "span9" }
  = f.input :google_map, :input_html => { :rows => "10", :class => "span9" }


  %div{ :class => "form-actions"}
    = f.button :submit, "Update", :class => "btn btn-large btn-warning"
    = link_to "Cancel", contacts_path, :class => "btn btn-large"