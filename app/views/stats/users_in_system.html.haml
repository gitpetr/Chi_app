%legend
  =t(".legend")

%table{ :class => "table table-striped table-bordered" }
  %thead
    %tr
      %th Email
      %th= t(".admin_field")
      %th= t(".signin_count_field")
      %th= t(".current_ip_field")
      %th= t(".last_ip_field")
      %th= t(".current_date_of_sign_in_field")
      %th= t(".last_date_of_sign_in_field")
  %tbody
    - @users.each do |u|
      %tr
        %td= u.email
        %td
          - if u.admin?
            %font{ :color => "red" }= t(".true_field")
          - else
            = t(".false_field")
        %td= u.sign_in_count
        %td= u.current_sign_in_ip
        %td= u.last_sign_in_ip
        %td= u.current_sign_in_at
        %td= u.last_sign_in_at


