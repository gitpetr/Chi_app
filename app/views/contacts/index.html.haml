%legend
  = t(".legend")

  / Edit contact button
  - if not Contact.first.nil? and can? :edit, Article
    = link_to edit_contact_path( Contact.first ), :class => "btn contact-edit-button" do
      %i{ :class=>"icon-pencil icon-white" }
      = t(".edit_link")

/ Contacts
- unless @contact.nil?
  %div.span12
    %address
      %strong= @contact.chirch_name
      %br/
      = @contact.address
      %br/
      %abbr{ :title => "Телефон"} Тел.
      = @contact.phone


  %div.span12.pagination-centered
    != @contact.google_map
    %br/
    %br/


